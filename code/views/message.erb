<% require 'cgi' %>
<% q = params[:name] %>

<div id="header">
  <h1><a href="<%= url %>">rq</a> : <a href="<%= "#{url}q/#{q}" %>"><%= q %></a> : <%= locals['msg_id'] %></h1>
</div>

<div id="sub-header">
  <div id="message-actions">
    <form class="inline" id="clone-form" method="post" action="<%= "#{url}q/#{q}/#{locals['msg_id']}/clone" %>">
      <button id="clone-button">Clone message</button>
    </form>
    <form class="inline" id="run-form" method="post" action="<%= "#{url}q/#{q}/#{locals['msg_id']}/run_now" %>">
      <button id="run-button">Run message (risky)</button>
    </form>
  </div>
  <p>message.json [ <a href="#" onclick="show_toggle()">full/summary</a> | <a href="<%= "#{url}q/#{q}/#{locals['msg_id']}.json" %>">raw</a> ]</p>
<table id="message-json-default" class="">
<%  ['dest', 'status', 'state' ].each do |key| %>
<%    next unless locals['msg'].has_key?(key) %>
<tr>
  <td class="left-aligned">
    <% if key == 'status' && locals['msg']['state'] == 'relayed' %>
       <% stuff, url = locals['msg']['status'].split(' - ', 2) %>
       <%= key %></td><td> : </td><td class="left-aligned"> relayed - <a class="inline" href="<%= url %>"><%= url %></a> </td>
    <% elsif key == 'orig_msg_id' || key == 'dup' %>
 <%= key %></td><td> : </td><td class="left-aligned"> <a class="inline" href="<%= locals['msg'][key] %>"><%= locals['msg'][key] %></a> </td>
    <% elsif key == 'dups' %>
 <%= key %></td><td> : </td><td class="left-aligned"> [
         <% locals['msg'][key].each do |v| %>
            <a href="<%= v %>"><%= v %></a>
         <% end %> ] </td>
    <% else %>
 <%= key %></td><td> : </td><td class="left-aligned"> <%= Rack::Utils::escape_html locals['msg'][key] %> </td>
    <% end %>
</tr>
<% end %>
</table>
<table id="message-json" class="hidden">
<%  ['src', 'msg_id', 'count', 'max_count', 'param1', 'param2', 'param3', 'param4', 'post_run_webhook', 'orig_msg_id', 'cloned_from', 'dups', 'dup', 'force_remote'].each do |key| %>
<%    next unless locals['msg'].has_key?(key) %>
<tr>
  <td class="left-aligned">
    <% if key == 'status' && locals['msg']['state'] == 'relayed' %>
       <% stuff, url = locals['msg']['status'].split(' - ', 2) %>
       <%= key %></td><td> : </td><td class="left-aligned"> relayed - <a class="inline" href="<%= url %>"><%= url %></a> </td>
    <% elsif key == 'orig_msg_id' || key == 'dup' %>
 <%= key %></td><td> : </td><td class="left-aligned"> <a class="inline" href="<%= locals['msg'][key] %>"><%= locals['msg'][key] %></a> </td>
    <% elsif key == 'dups' %>
 <%= key %></td><td> : </td><td class="left-aligned"> [
         <% locals['msg'][key].each do |v| %>
            <a href="<%= v %>"><%= v %></a>
         <% end %> ] </td>
    <% else %>
 <%= key %></td><td> : </td><td class="left-aligned"> <%= Rack::Utils::escape_html locals['msg'][key] %> </td>
    <% end %>
</tr>
<% end %>
</table>
</div>

<h3>Message Attachments</h3>
<% locals['msg']['_attachments'] ||= {} %>
<% if locals['msg']['_attachments'].size > 0 %>
<ul>
<%  locals['msg']['_attachments'].keys.sort.each do |key| %>
<li>
  <span class="">
    <a href="<%= "#{url}q/#{q}/#{locals['msg_id']}/attach/#{key}" %>"><%= key %></a>
  </span>
</li>
<% end %>
</ul>
<% else %>
  <p>No attachments.</p>
<% end %>

<h3>Log Tail Window [ <a href="<%= "#{url}q/#{q}/#{locals['msg_id']}/log/stdio.log" %>">raw</a> ] [ <a href="<%= "#{url}q/#{q}/#{locals['msg_id']}/tailviewlog/stdio.log" %>">Full Tail</a> ] </h3>
<iframe src="<%= "#{url}q/#{q}/#{locals['msg_id']}/tailviewlog/stdio.log?in_iframe=1" %>" 
  width="100%" height="400" frameborder="0">
</iframe>
<script>
  function show_toggle() {
    var cfg = document.getElementById('message-json');
    if (cfg.className.indexOf('hidden') >= 0) {
      cfg.className = cfg.className.replace('hidden', '').replace(/\s+$/, "");
    } else {
      cfg.className += ' hidden';
    }
    return false;
  }

  var cloneForm = document.getElementById('clone-form');
  cloneForm.addEventListener('submit', function (e) {
    var cloneButton = document.getElementById('clone-button');
    cloneButton.disabled = true;
  });

  var runForm = document.getElementById('run-form');
  runForm.addEventListener('submit', function (e) {
    var runButton = document.getElementById('run-button');
    runButton.disabled = true;
  });
</script>
